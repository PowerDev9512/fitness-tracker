{
  // extend from expo tsconfig
  "extends": "expo/tsconfig.base.json",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "webpack.config.js"
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-native",
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "components": ["./src/components"],
      "store": ["./src/store"],
      "features": ["./src/features"],
      "api": ["./src/api"],
      "types": ["./src/types"],
      "utils": ["./src/utils"],
      "src": ["./src"]
    }
  }
}
